<div class="container">
  <div class="row">
    <div class="col-9 offset-2">
      <div class="customer-login-form">
        <h4>ジャンル編集</h4>
        <%= form_with model: @genre, url: admin_genre_path(@genre.id) do |f| %>
          <%= render 'form', f: f %>
          <div class="d-flex flex-row-reverse my-3">
            <%= f.submit "変更を保存", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>