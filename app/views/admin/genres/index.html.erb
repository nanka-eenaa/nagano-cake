<div class="container">
  <h4>ジャンル一覧・追加</h4>
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <%= render 'form', f: f %>

    <%= f.submit "新規登録", class: "btn btn-success" %>
  <% end %>

  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>ジャンル名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
