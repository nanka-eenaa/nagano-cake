<div class="container">
 <div class="row">
  <div class="col-9 offset-2">
    <div class="customer-login-form">
      <h4>商品詳細</h4>
      <div class="col-8 offset-2">
        <%= image_tag @item.get_image(200, 200) %>
        <table class="table">
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格<br>(税抜価格)</td>
            <td>
              <%= @item.tax_price.to_s(:delimited) %>(<%=@item.price.to_s(:delimited)%>)円
            </td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
            <% if @item.status %>
              販売中
            <% else %>
              販売停止中
            <% end %>
            </td>
          </tr>
        </table>
      </div>
      <div class="d-flex flex-row-reverse">
        <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>