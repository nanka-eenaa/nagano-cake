<div class="container">
  <div class="row">
    <div class="col-12 my-3">
      <div class="my-2 form-inline justify-content-between">
        <h4 class="col-3 my-3">商品一覧</h4>
        <div class=" d-flex">
          <%= link_to "商品の追加", new_admin_item_path %>
        </div>
      </div>
        <table class="table">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td>
                  <%= link_to admin_item_path(item.id) do %>
                    <%= item.name %>
                  <% end %>
                </td>
                <td><%= item.price.to_s(:delimited) %></td>
                <td><%= item.genre.name %></td>
                <td>
                  <% if item.status == true %>
                    販売中
                  <% else %>
                    販売停止中
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @items %>

      </div>
    </div>
  </div>
</div>