<div class="container">
  <div class="row">

    <h4><%= @customer.name %>さんの会員情報編集</h4>

    <%= form_with model: @customer, url: admin_customer_path do |f| %>

      <div class="field">
        <%= f.label :id, "会員ID" %>
        <%= @customer.id %>
      </div>

      <div class="field">
        <%= f.label "氏名" %>
        <%= f.text_field :last_name, autofocus: true  %>
        <%= f.text_field :first_name  %>
      </div>

        <div class="field">
        <%= f.label "フリガナ" %>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </div>

      <div class="field">
        <%= f.label :post_code,"郵便番号" %>
        <%= f.text_field :post_code %>
      </div>

      <div class="field">
        <%= f.label :address,"住所" %>
        <%= f.text_field :address %>
      </div>

      <div class="field">
        <%= f.label :telephone_number,"電話番号(ハイフンなし)" %>
        <%= f.text_field :telephone_number %>
      </div>

      <div class="field">
        <%= f.label :email,"メールアドレス" %>
        <%= f.email_field :email,  autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :is_active, "会員ステータス" %>
        <%= f.radio_button :is_active,true, value: true  %>
        <%= f.label :is_active_true,"有効" %>
        <%= f.radio_button :is_active,false,value: false %>
        <%= f.label :is_active_false,"退会" %>
      </div>

      <%= f.submit "変更を保存",class: "btn btn-success"%>

    <% end %>


  </div>
</div>