<div class="container">
  <div class="row">
    <div class="col-9 offset-2">
      <div class="customer-login-form">
        <h4><%= @customer.name %>さんの会員情報編集</h4>

        <div class="col-8 offset-2">
          <%= form_with model: @customer, url: admin_customer_path do |f| %>

            <div class="field my-3">
              <%= f.label :id, "会員ID"%>
              <%= @customer.id %>
            </div>

            <div class="field">
              <%= f.label "氏名" %><br/>
              <%= f.text_field :last_name, autofocus: true , class: "col-4 login-form-style mb-3 "%>
              <%= f.text_field :first_name, class: "col-4 login-form-style mb-3 ml-2" %>
            </div>

              <div class="field">
              <%= f.label "フリガナ" %><br/>
              <%= f.text_field :last_name_kana, class: "col-4 login-form-style mb-3" %>
              <%= f.text_field :first_name_kana, class: "col-4 login-form-style mb-3 ml-2"%>
            </div>

            <div class="field">
              <%= f.label :post_code,"郵便番号" %>
              <%= f.text_field :post_code, class: "col login-form-style mb-3" %>
            </div>

            <div class="field">
              <%= f.label :address,"住所" %>
              <%= f.text_field :address, class: "col login-form-style mb-3" %>
            </div>

            <div class="field">
              <%= f.label :telephone_number,"電話番号(ハイフンなし)" %>
              <%= f.text_field :telephone_number, class: "col login-form-style mb-3" %>
            </div>

            <div class="field">
              <%= f.label :email,"メールアドレス" %>
              <%= f.email_field :email,  autocomplete: "email", class: "col login-form-style mb-3" %>
            </div>

            <div class="field">
              <%= f.label :is_active, "会員ステータス" %>
              <%= f.radio_button :is_active,true, value: true  %>
              <%= f.label :is_active_true,"有効" %>
              <%= f.radio_button :is_active,false,value: false %>
              <%= f.label :is_active_false,"退会" %>
            </div>
            <div class="d-flex flex-row-reverse mt-3">
              <%= f.submit "変更を保存",class: "btn btn-success"%>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>