<h4>注文履歴詳細</h4>
<table class="table">
  <tbody>
    <tr>
      <th>購入者</th>
      <td><%= @order.customer.name %></td>
    </tr>
    <tr>
      <th>注文日</th>
      <td><%= l @order.created_at, format: :short %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td>
        〒<%= @order.post_code %><br>
        <%= @order.address %><br>
        <%= @order.name %>
      </td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <th>注文ステータス</th>
      <td>
        <%= form_with model:@order do |f| %>
          <%= f.select :status, Order.statuses.keys.map {|status| [Order.statuses_i18n[status], status]} %>
          <%= f.submit "更新" %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.price %></td>
        <td><%= order_detail.quantity %></td>
        <td><%= order_detail.sub_total %></td>
        <td>
          <%= form_with model:[@order, order_detail], url: admin_order_order_detail_path(@order.id, order_detail.id) do |f| %>
            <%= f.select :status, OrderDetail.statuses.keys.map {|status| [OrderDetail.statuses_i18n[status], status]} %>
            <%= f.submit "更新" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<table class="table">
  <tbody>
    <tr>
      <th>商品合計</th>
      <td><%= @order_total_price %>円</td>
    </tr>
    <tr>
      <th>送料</th>
      <td><%= @order.postage %>円</td>
    </tr>
    <tr>
      <th>請求金額合計</th>
      <td><%= @order.total_payment %>円</td>
    </tr>
  </tbody>
</table>