<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <h1><strong>LOGO</strong></h1>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
                <li>
                  <%= link_to about_path, class: 'text-dark btn btn-outline-secondary' do %>
                    マイページ
                  <% end %>
                </li>
                <li>
                  <%= link_to about_path, class: 'text-dark btn btn btn-outline-secondary' do %>
                    商品一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to about_path, class: 'text-dark btn btn btn-outline-secondary' do %>
                    カート
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_customer_session_path, method: :delete, class: 'text-dark btn btn btn-outline-secondary' do %>
                    ログアウト
                  <% end %>
                </li>
              <% else %>
                <li>
                  <%= link_to about_path, class: 'text-dark btn btn-outline-secondary' do %>
                    About
                  <% end %>
                </li>
                <li>
                  <%= link_to about_path, class: 'text-dark btn btn btn-outline-secondary' do %>
                    商品一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to new_customer_registration_path, class: 'text-dark btn btn btn-outline-secondary' do %>
                    新規登録
                  <% end %>
                </li>
                <li>
                  <%= link_to new_customer_session_path, class: 'text-dark btn btn btn-outline-secondary' do %>
                    ログイン
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
