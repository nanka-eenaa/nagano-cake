<div class = "container">
  <div class = "row">

   <h3>会員情報編集</h3>

  <%= form_with model: @customer, url: customer_update_path do |f| %>


    <div class="field">
      <%= f.label "氏名" %>
      <%= f.text_field :last_name, autofocus: true  %>
      <%= f.text_field :first_name  %>
    </div>

      <div class="field">
      <%= f.label "フリガナ" %>
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
    </div>

    <div class="field">
      <%= f.label :post_code,"郵便番号(ハイフンなし)" %>
      <%= f.text_field :post_code %>
    </div>

    <div class="field">
      <%= f.label :address,"住所" %>
      <%= f.text_field :address %>
    </div>

    <div class="field">
      <%= f.label :telephone_number,"電話番号(ハイフンなし)" %>
      <%= f.text_field :telephone_number %>
    </div>

    <div class="field">
      <%= f.label :email,"メールアドレス" %>
      <%= f.email_field :email,  autocomplete: "email" %>
    </div>

    <%= f.submit "編集内容を保存",class: "btn btn-success"%>

  <% end %>

<%= link_to "退会する",customer_check_path,class: "btn btn-danger" %>
  </div>
</div>