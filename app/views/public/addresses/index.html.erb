<div class = "container">
  <div class = "row">
    <h3>配送先登録/一覧</h3>

    <%= form_with model: @address do |f| %>

      <div class="field">
        <%= f.label "郵便番号(ハイフンなし)" %>
        <%= f.text_field :post_code, autofocus: true  %>
      </div>

      <div class="field">
        <%= f.label "住所" %>
        <%= f.text_field :address %>
      </div>

      <div class="field">
        <%= f.label "宛名" %>
        <%= f.text_field :name %>
      </div>

      <%= f.submit "新規投稿",class: "btn btn-success" %>

    <% end %>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">郵便番号(ハイフンなし)</th>
          <th scope="col">住所</th>
          <th scope="col">宛名</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.post_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td><%= link_to "編集する",edit_address_path(address.id),class: "btn btn-success" %></td>
            <td><%= link_to "削除する",address_path(address.id), method: :delete,data: {confirm: "削除しますか？"},class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
