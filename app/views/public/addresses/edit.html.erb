<div class = "container">
  <div class = "row">

    <h3>配送先編集</h3>

    <%= form_with model: @address do |f| %>

      <div class="field">
        <%= f.label "郵便番号(ハイフンなし)" %>
        <%= f.text_field :post_code, autofocus: true  %>
      </div>

      <div class="field">
        <%= f.label "住所" %>
        <%= f.text_field :address %>
      </div>

      <div class="field">
        <%= f.label "宛名" %>
        <%= f.text_field :name %>
      </div>

      <%= f.submit "変更内容を保存",class: "btn btn-success" %>

    <% end %>

  </div>
</div>
