<h4>注文情報確認</h4>

<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= image_tag cart_item.item.get_image(50,50) %>
          <%= cart_item.item.name %>
        </td>
        <td>
          <%= cart_item.item.tax_price %>

        </td>
        <td>
          <%= cart_item.quantity %>

        </td>
        <td>
          <%= cart_item.sub_total %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<table class="table">
  <tbody>
    <tr>
      <th>送料</th>
      <td><%= @order.postage %></td>
    </tr>
    <tr>
      <th>商品合計</th>
      <td><%= @total_price %></td>
    </tr>
    <tr>
      <th>請求金額</th>
      <td><%= @order.total_payment %></td>
    </tr>
  </tbody>
</table>


<div>
  <strong>支払い方法</strong>
  <%= @order.payment_method_i18n %>
</div>

<div>
  <strong>お届け先</strong>
  〒<%= @order.post_code %>
  <%= @order.address %><br>
  <%= @order.name %>
</div>

<%= form_with model: @order,url: orders_path do |f| %>
  <%= f.hidden_field :post_code,value: @order.post_code %>
  <%= f.hidden_field :address,value: @order.address %>
  <%= f.hidden_field :name,value: @order.name %>
  <%= f.hidden_field :postage,value: @order.postage %>
  <%= f.hidden_field :total_payment,value: @order.total_payment %>
  <%= f.hidden_field :payment_method,value: @order.payment_method %>
  <%= f.hidden_field :select_address,value: @select_address %>
  <%= f.submit "注文を確定する" %>
<% end %>
