<div class="container">
<h4 class="py-4">注文履歴詳細</h4>
<p><strong>注文情報</strong></p>
<table class="table">
  <tbody>
    <tr>
      <th>注文日</th>
      <td><%= l @order.created_at,format: :short %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td><%= @order.address %></td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= @order.status_i18n %></td>
    </tr>
  </tbody>
</table>

<p><strong>請求情報</strong></p>
<table class="table">
  <tbody>
    <tr>
      <th>商品合計</th>
      <td><%= @order_total_price %></td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= @order.postage %></td>
    </tr>
    <tr>
      <th>ご請求額</th>
      <td><%= @order.total_payment %></td>
    </tr>
  </tbody>
</table>



<p><strong>注文内容</strong></p>
<table class="table">
  <thead>
    <tr>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
　　<% @order_details.each do |order_detail| %>
　　  <tr>
　　    <td><%= order_detail.item.name %></td>
　　    <td><%= order_detail.tax_price %></td>
　　    <td><%= order_detail.quantity %></td>
　　    <td><%= order_detail.sub_total %></td>
　　  </tr>
　　<% end %>
  </tbody>
</table>
</div>