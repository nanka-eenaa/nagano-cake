<div class="container customer-order">
  <h4 class="py-4">注文履歴一覧</h4>

  <table class="table order-table">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払い金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= l order.created_at %></td>
          <td>
            〒<%= order.post_code %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td>
            <% order.items.each do |item| %>
              <%= item.name %>
            <% end %>
          </td>
          <td><%= order.total_payment %></td>
          <td><%= order.status_i18n %></td>
          <td><%= link_to "表示する",order_path(order.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>