<div class="container">
  <div class="row item-show-wrapper py-5">
    <div class="col-2 py-5">
      <%= render 'public/homes/genre', genres: @genres %>
    </div>
    <div class="col-3 offset-1 py-5">
        <%= image_tag @item.get_image(200,200) %>
    </div>
    <div class="col-5 offset-1 py-5">
      <p><%= @item.name %></p>
      <p><%= @item.introduction %></p>
      <p>￥<%= @item.tax_price.to_s(:delimited) %>(税込)</p>
      <%= form_with model: @cart_item, url: cart_items_path do |f| %>
        <%= f.select :quantity, *[1..10],include_blank: '個数選択', class: "custom-select" %>
        <%= f.hidden_field :item_id, value: @item.id %>
        <%= f.submit "カートに入れる",class: "btn btn-success ml-4" %>
      <% end %>
    </div>
  </div>
</div>