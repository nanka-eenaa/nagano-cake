<div class="container">
  <div class="row">
    <div class="col-lg-2">
    </div>
    <div class="col-lg-10">
      <h4><strong>商品一覧</strong></h4><h6>(全<% @items.count %>件)</h6>
      <% @items.each do |item| %>
        <div>
          <%= image_tag item.get_image(100,100) %>
          <%= item.name %>
          ￥<%= item.price %>
        </div>
      <% end %>
      <%= paginate @items %>
    </div>
  </div>
</div>